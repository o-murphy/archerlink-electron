{
  "name": "archerlink-electron",
  "version": "0.1.1",
  "private": true,
  "author": "Dmytro Yaroshenko (o-murphy) https://github.com/o-murphy",
  "homepage": "https://github.com/tvt-tech/archerlink-electron",
  "repository": {
    "type": "git",
    "url": "https://github.com/tvt-tech/archerlink-electron.git"
  },
  "dependencies": {
    "express": "^4.19.2",
    "fluent-ffmpeg": "^2.1.2",
    "luxon": "^3.4.4",
    "node-wifi": "^2.0.16",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "electron": "22",
    "electron-builder": "22.14.13",
    "grpc-tools": "^1.12.4"
  },
  "scripts": {
    "start": "electron --trace-warnings .",
    "dist": "electron-builder",
    "build:win32": "electron-builder build --win --ia32",
    "build:win64": "electron-builder build --win --x64"
  },
  "main": "electron.cjs",
  "build": {
    "appId": "com.archerlink.app",
    "productName": "ArcherLink",
    "files": [
      "./*.js",
      "./*.cjs",
      "./src/*.js",
      "./src/*.cjs"
    ],
    "extraFiles": [
      "./ffmpeg.exe",
      "./LICENSE",
      "./LICENSE.ffmpeg.txt",
      "./public/**/*"
    ],
    "extraResources": [],
    "extraMetadata": {
      "main": "./electron.cjs"
    },
    "win": {
      "target": "nsis",
      "icon": "./archerlink.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
